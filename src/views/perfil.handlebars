

<div class="container justify'content-center">
    <div class="row justify-content-center text-center">
        <div class="h1">Curriculum Vitae Form</div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="col-md-6">
          
                <h2>Personal information</h2>
              <form class="form" action="/api/cv" method="post" enctype="multipart/form-data">
<br>
                <div class="input-group mb-3">
                  <label class="form-control" for="img">Insert a Profile Picture:</label>
                  <input type="file" name="nameImg" class="form-control"></input>

                </div>
                   <div class="input-group mb-3">
                  <input type="text" placeholder="Name" name="name" class="form-control"></input>

                </div>
                <div class="input-group mb-3">
                  <input type="text" placeholder="ID" name="identific" class="form-control"></input>

                </div>
                  <div class="input-group mb-3">
                  <input type="text" placeholder="Occupation" name="occupation" class="form-control"></input>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group mb-1 text-center"><label for="Date">Date of birth</label><br></div>
                  <input type="date" placeholder="Date" name="date" class="form-control"></input> 
                </div>
                <div class="input-group mb-3">
                  <input type="text" placeholder="Phone" name="phone" class="form-control"></input>
                </div>
                <div class="input-group mb-3">
                  <input type="email" placeholder="Email" name="email" class="form-control"></input>
                </div>
                <div class="input-group mb-3">
                  <textarea class="form-control" name="address" rows="3" placeholder="Address"></textarea>
                </div>
                <div class="input-group mb-3">
                  <button type="submit" class="form-control btn btn-success">next</button>
                </div> 
                </form>
        </div>
    </div>
</div>
</main>

